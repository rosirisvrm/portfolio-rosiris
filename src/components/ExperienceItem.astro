---
type Props = {
    time: string,
    role: string,
    company: string,
    type: string,
    description: string,
}

---

<li class="mb-10 ms-4">
    <div class="
        absolute w-3 h-3 
        bg-secondary-400 border-secondary-400
        dark:bg-gray-500 dark:border-gray-500
        border rounded-full 
        mt-1.5 -start-1.5
    ">
    </div>

    <time class="text-sm font-normal leading-none text-black/60 dark:text-gray-400 mb-7">
        {Astro.props.time}
    </time>

    <h3 class="text-xl text-secondary-500 dark:text-primary-500 font-bold mb-1">
        {Astro.props.role}
    </h3>

    <div class="flex flex-row items-center space-x-4 mb-3">
        <h6 class="text-lg font-medium text-black/60 dark:text-gray-200 italic">
            {Astro.props.company}
        </h6>
        <div class="
            flex justify-center items-center 
            py-1 px-4 
            rounded-full border 
            sm:text-sm text-xs
            bg-pink-50 border-secondary-400 text-secondary-400 
            dark:bg-transparent dark:border-white/10 dark:text-white
        ">
            {Astro.props.type}
        </div>
    </div>

    <p class="mb-4 sm:text-base text-sm font-normal text-black/60 dark:text-white">
        {Astro.props.description}
    </p>

