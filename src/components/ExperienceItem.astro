---
type Props = {
    time: string,
    role: string,
    company: string,
    type: string,
    description: string,
}

---

<li class="mb-10 ms-4">
    <div class="
        absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 
        border border-white dark:border-gray-900 dark:bg-gray-500"
    >
    </div>

    <time class="text-sm font-normal leading-none text-gray-400 mb-7">
        {Astro.props.time}
    </time>

    <h3 class="text-xl green-color dark:text-white font-bold mb-1">
        {Astro.props.role}
    </h3>

    <div class="flex flex-row items-center space-x-4 mb-3">
        <h6 class="text-lg font-medium text-gray-200 italic">
            {Astro.props.company}
        </h6>
        <div class='flex justify-center items-center bg-withe/5 py-1 px-4 
            rounded-full border border-white/10 sm:text-sm text-xs'>
            {Astro.props.type}
        </div>
    </div>

    <p class="mb-4 text-base font-norma text-white">
        {Astro.props.description}
    </p>

