---
import EducationItem from "@/components/EducationItem.astro";
import { education } from "@/data";
---

<section id="education" class="bg-white dark:bg-black py-24 px-10 lg:px-32 flex flex-wrap">
    <div class="md:mx-10 w-full flex flex-col">
        
        <h3 class="text-black/60 dark:text-white text-xl font-bold mb-20">
            <span class="text-secondary-500 dark:text-primary-500 font-bold">|</span>
            Education
        </h3>

        <div class="flex flex-col w-full gap-8 flex-wrap">
            {education.map((edu) => (
                <EducationItem item={edu} />
            ))}
        </div>

    </div>
</section>
