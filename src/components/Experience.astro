---
import ExperienceItem from "./ExperienceItem.astro";
import { experience } from "../data";
---

<section id="experience" class="section-bg py-24 px-10 lg:px-32 flex flex-wrap w-full">
    <div class="md:mx-10 w-full flex flex-col">

        <h3 class="text-xl font-bold mb-20">| Experiencia</h3>
        
        <ol class="relative border-s border-gray-200 dark:border-gray-500">
            {experience.map((item) => (
                <ExperienceItem {...item} />
            ))}
        </ol>

    </div>
</section>

<style>
    .light-green-color{
        color: #84ad7bff;
    }

</style>